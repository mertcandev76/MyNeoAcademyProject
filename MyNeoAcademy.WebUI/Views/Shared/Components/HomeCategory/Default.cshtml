@model List<ResultCategoryDTO>

<div class="categories-area section-padding30">
    <div class="container">
        <div class="row justify-content-sm-center">
            <div class="cl-xl-7 col-lg-8 col-md-10">
                <div class="section-tittle text-center mb-70">
                    <span>Popüler Çevrimiçi Kurslar</span>
                    <h2>Tüm Kategorilere Göz Atalım</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var cat in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="single-cat mb-50">
                        <div class="cat-icon">
                            <span class="@cat.IconClass"></span>
                        </div>
                        <div class="cat-cap">
                            <h5><a href="#">@cat.Name</a></h5>
                            <p>@cat.Description</p>
                            <a href="#" class="read-more1">Devamını oku</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="browse-btn2 text-center mt-50">
                    <a href="courses.html" class="btn">Daha Fazla Kurs Bul</a>
                </div>
            </div>
        </div>
    </div>
</div>