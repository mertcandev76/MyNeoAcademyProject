@model CreateBlogTagDTO
@{
    ViewData["Title"] = "Yeni Blog-Etiket Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>

        <div class="card-body">
            <form asp-action="Create" asp-area="Admin" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="BlogID" class="form-label">Blog</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light text-secondary">
                                <i class="fas fa-blog"></i>
                            </span>
                        </div>
                        <select asp-for="BlogID" asp-items="(IEnumerable<SelectListItem>)ViewBag.Blogs" class="form-control">
                            <option disabled selected hidden>-- Blog Seçin --</option>
                        </select>
                    </div>
                    <span asp-validation-for="BlogID" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TagID" class="form-label">Etiket</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light text-secondary">
                                <i class="fas fa-tag"></i>
                            </span>
                        </div>
                        <select asp-for="TagID" asp-items="(IEnumerable<SelectListItem>)ViewBag.Tags" class="form-control">
                            <option disabled selected hidden>-- Etiket Seçin --</option>
                        </select>
                    </div>
                    <span asp-validation-for="TagID" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
