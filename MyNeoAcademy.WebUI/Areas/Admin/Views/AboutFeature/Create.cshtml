@model CreateAboutFeatureDTO
@{
    ViewData["Title"] = "Özellik Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>

        <div class="card-body">
            <form asp-action="Create" asp-area="Admin" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="IconClass" class="form-label">İkon Sınıfı</label>
                    <input asp-for="IconClass" class="form-control" placeholder="Örn: fas fa-book" />
                    <span asp-validation-for="IconClass" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Text" class="form-label">Açıklama</label>
                    <textarea asp-for="Text" class="form-control" rows="3" placeholder="Özellik açıklaması girin..."></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AboutID" class="form-label">Bağlı Olduğu About</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light text-secondary">
                            <i class="fas fa-info-circle"></i>
                        </span>
                        <select asp-for="AboutID" asp-items="(IEnumerable<SelectListItem>)ViewBag.AboutList" class="form-control">
                            <option disabled selected hidden>-- Hakkında seçin --</option>
                        </select>
                    </div>
                    <span asp-validation-for="AboutID" class="text-danger small"></span>
                </div>



                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

