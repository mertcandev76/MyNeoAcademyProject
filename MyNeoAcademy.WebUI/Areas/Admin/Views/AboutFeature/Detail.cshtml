@model ResultAboutFeatureDTO
@{
    ViewData["Title"] = "Özellik Detayı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-primary">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.AboutFeatureID</dd>

                <dt class="col-sm-3">Icon Class</dt>

                <dd class="col-sm-9">
                    @if (string.IsNullOrWhiteSpace(Model.IconClass))
                    {
                        <span class="text-muted">Yok</span>
                    }
                    else
                    {
                        <i class="@Model.IconClass"></i> 
                    }
                </dd>


                <dt class="col-sm-3">Text</dt>
                <dd class="col-sm-9">@Html.Raw(Model.Text?.Replace("\n", "<br />") ?? "<span class='text-muted'>Yok</span>")</dd>

            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model.AboutFeatureID" class="btn btn-warning">Güncelle</a>
            </div>
        </div>
    </div>
</div>

