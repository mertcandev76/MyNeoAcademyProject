@model UpdateCourseDTO
@{
    ViewData["Title"] = "Kurs Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input asp-for="CourseID" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="CourseName" class="form-label"></label>
                    <input asp-for="CourseName" class="form-control" placeholder="Kurs adı" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Resim URL'si" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label for="CourseCategoryID" class="font-weight-bold">
                        Kurs Kategorisi
                    </label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light text-secondary">
                                <i class="fas fa-tags"></i>
                            </span>
                        </div>
                        <select id="CourseCategoryID"
                                name="CourseCategoryID"
                                class="form-control"
                                asp-for="CourseCategoryID"
                                asp-items="(IEnumerable<SelectListItem>)ViewBag.CourseCategories">
                            <option value="" disabled selected hidden>-- Kategori Seçin --</option>
                        </select>
                    </div>
                    <span asp-validation-for="CourseCategoryID" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="Fiyat" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsShown" class="form-check-input" type="checkbox" />
                    <label asp-for="IsShown" class="form-check-label">Gösterilsin mi?</label>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>


