@model ResultCourseDTO
@{
    ViewData["Title"] = "Kurs Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-primary">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Kurs Adı</dt>
                <dd class="col-sm-9">@Model.CourseName</dd>

                <dt class="col-sm-3">Kategori</dt>
                <dd class="col-sm-9">@Model.CourseCategory?.Name</dd>

                <dt class="col-sm-3">Fiyat</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C2")</dd>

                <dt class="col-sm-3">Görünürlük</dt>
                <dd class="col-sm-9">
                    @(Model.IsShown ? "Evet" : "Hayır")
                </dd>

                <dt class="col-sm-3">Resim</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Kurs Resmi" class="img-fluid rounded" style="max-height:300px;" />
                    }
                    else
                    {
                        <span>(Resim yok)</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-route-id="@Model.CourseID" class="btn btn-warning">Güncelle</a>
            </div>
        </div>
    </div>
</div>

