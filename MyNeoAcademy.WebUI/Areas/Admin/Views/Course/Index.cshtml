@model List<ResultCourseDTO>
@{
    ViewData["Title"] = "Kurs Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-3">
    <div class="card shadow-sm mt-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>@ViewData["Title"]</h3>
            <a asp-action="Create" class="btn btn-primary btn-sm">Yeni Kurs Ekle</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered mb-0 text-center align-middle">
                <thead class="table">
                    <tr>
                        <th>Kurs Adı</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Görünürlük</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>@item.CourseCategory?.Name</td>
                                <td>@item.Price.ToString("C2")</td>
                                <td>
                                    @(item.IsShown ? "Evet" : "Hayır")
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.CourseID" class="btn btn-sm btn-info me-1">Detay</a>
                                    <a asp-action="Edit" asp-route-id="@item.CourseID" class="btn btn-sm btn-warning me-1">Düzenle</a>
                                    <button type="button" class="btn btn-danger btn-sm"
                                            data-toggle="modal"
                                            data-target="#deleteModal"
                                            data-id="@item.CourseID"
                                            data-name="@item.CourseName"
                                            data-controller="Course">
                                        <i class="fas fa-trash"></i> Sil
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">Kayıt bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Silme onay modalı -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteItemName"></strong> adlı kursu silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <a id="confirmDeleteBtn" class="btn btn-danger">Sil</a>
            </div>
        </div>
    </div>
</div>

