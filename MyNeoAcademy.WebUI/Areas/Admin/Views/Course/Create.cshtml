@model CreateCourseDTO
@{
    ViewData["Title"] = "Yeni Kurs Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-3">
    <div class="card shadow-sm mt-3">
        <div class="card-header">
            <h5>@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="CourseName" class="form-label"></label>
                    <input asp-for="CourseName" class="form-control" placeholder="Kurs adı" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Resim URL'si" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="CourseCategoryID" class="font-weight-bold">Kurs Kategorisi</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light text-secondary">
                                <i class="fas fa-tags"></i>
                            </span>
                        </div>
                        <select asp-for="CourseCategoryID" asp-items="(IEnumerable<SelectListItem>)ViewBag.CourseCategories" class="form-control">
                            <option value="" disabled selected hidden>-- Kategori Seçin --</option>
                        </select>
                    </div>
                    <span asp-validation-for="CourseCategoryID" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="Fiyat" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsShown" class="form-check-input" type="checkbox" />
                    <label asp-for="IsShown" class="form-check-label">Gösterilsin mi?</label>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

