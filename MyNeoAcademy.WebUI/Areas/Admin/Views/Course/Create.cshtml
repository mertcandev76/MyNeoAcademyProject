@model CreateCourseWithFileDTO
@{
    ViewData["Title"] = "Yeni Kurs Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>

        <div class="card-body">
            <form asp-action="Create" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" placeholder="Kurs başlığını girin..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Kurs açıklaması girin..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryID" class="font-weight-bold">Kurs Kategorisi</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light text-secondary">
                                <i class="fas fa-tags"></i>
                            </span>
                        </div>
                        <select asp-for="CategoryID" asp-items="(IEnumerable<SelectListItem>)ViewBag.Categories" class="form-control">
                            <option value="" disabled selected hidden>-- Kategori Seçin --</option>
                        </select>
                    </div>
                    <span asp-validation-for="CategoryID" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="InstructorID" class="font-weight-bold">Kurs Kategorisi</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light text-secondary">
                                <i class="fas fa-tags"></i>
                            </span>
                        </div>
                        <select asp-for="InstructorID" asp-items="(IEnumerable<SelectListItem>)ViewBag.Instructors" class="form-control">
                            <option value="" disabled selected hidden>-- Eğitmen seçin  --</option>
                        </select>
                    </div>
                    <span asp-validation-for="InstructorID" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Fiyat (TL)</label>
                    <input asp-for="Price" class="form-control" placeholder="Fiyat girin (opsiyonel)" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rating" class="form-label">Puan</label>
                    <input asp-for="Rating" type="number" min="0" max="5" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ReviewCount" class="form-label">Yorum Sayısı</label>
                    <input asp-for="ReviewCount" type="number" min="0" class="form-control" />
                    <span asp-validation-for="ReviewCount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StudentCount" class="form-label">Öğrenci Sayısı</label>
                    <input asp-for="StudentCount" type="number" min="0" class="form-control" />
                    <span asp-validation-for="StudentCount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LikeCount" class="form-label">Beğeni Sayısı</label>
                    <input asp-for="LikeCount" type="number" min="0" class="form-control" />
                    <span asp-validation-for="LikeCount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Kurs Resmi</label>
                    <input asp-for="ImageFile" type="file" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

