@model ResultSliderDTO
@{
    ViewData["Title"] = "Slider Detayı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-primary">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.SliderID</dd>

                <dt class="col-sm-3">Başlık</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Alt Başlık</dt>
                <dd class="col-sm-9">@Model.SubTitle</dd>

                <dt class="col-sm-3">Buton Metni</dt>
                <dd class="col-sm-9">@Model.ButtonText</dd>

                <dt class="col-sm-3">Buton URL</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ButtonUrl))
                    {
                        <a href="@Model.ButtonUrl" target="_blank">@Model.ButtonUrl</a>
                    }
                    else
                    {
                        <span class="text-muted">URL yok</span>
                    }
                </dd>
                <dt class="col-sm-3">Görsel</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <a href="@Model.ImageUrl" target="_blank">Görseli Görüntüle</a>

                    }
                    else
                    {
                        <span class="text-muted">Görsel bulunamadı.</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model.SliderID" class="btn btn-warning">Güncelle</a>
            </div>
        </div>
    </div>
</div>

