@model ResultBannerDTO
@{
    ViewData["Title"] = "Afiş Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-sm rounded border-primary">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3">Banner Başlığı</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Görsel</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <a href="@Model.ImageUrl" target="_blank">Görseli Görüntüle</a>
                        <br />
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid mt-2" style="max-height: 150px;" />
                    }
                    else
                    {
                        <span>Görsel bulunamadı.</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model.BannerID" class="btn btn-warning">Güncelle</a>
            </div>
        </div>
    </div>
</div>

