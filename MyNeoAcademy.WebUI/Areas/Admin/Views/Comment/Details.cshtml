@model ResultCommentDTO

@{
    ViewData["Title"] = "Yorum Detayı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-primary">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3">Yorum ID</dt>
                <dd class="col-sm-9">@Model.CommentID</dd>

                <dt class="col-sm-3">Kullanıcı Adı</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">E-posta</dt>
                <dd class="col-sm-9">@Model.Email ?? "<em>Belirtilmemiş</em>"</dd>

                <dt class="col-sm-3">İçerik</dt>
                <dd class="col-sm-9">@Model.Content</dd>

                <dt class="col-sm-3">Blog</dt>
                <dd class="col-sm-9">@Model.Blog?.Title ?? "<span class='text-muted'>Yok</span>"</dd>

                <dt class="col-sm-3">Oluşturulma Tarihi</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>

                <dt class="col-sm-3">Profil Resmi</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                    {
                        <a href="https://localhost:7230/@Model.ImageUrl" target="_blank">Resmi Görüntüle</a>
                    }
                    else
                    {
                        <span class="text-muted">Resim bulunamadı.</span>
                    }
                </dd>

            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model.CommentID" class="btn btn-warning">Düzenle</a>
            </div>

        </div>
    </div>
</div>
