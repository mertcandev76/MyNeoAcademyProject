@model List<ResultAboutDTO>
@{
    ViewData["Title"] = "Hakkımızda Bilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-3">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">@ViewData["Title"]</h3>
            <a asp-action="Create" asp-area="Admin" class="btn btn-primary btn-sm">+ Yeni Bilgi Ekle</a>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-bordered mb-0 text-center align-middle">
                    <thead class="table">
                        <tr>
                            <th>#</th>
                            <th>Açıklama</th>
                            <th>Görsel 1</th>
                            <th>Görsel 2</th>
                            <th>Öğe 1</th>
                            <th>Öğe 2</th>
                            <th>Öğe 3</th>
                            <th>Öğe 4</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="table">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AboutID</td>
                                <td>@item.Description</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl1))
                                    {
                                        <img src="@item.ImageUrl1" alt="Görsel 1" style="height: 40px;" />
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl2))
                                    {
                                        <img src="@item.ImageUrl2" alt="Görsel 2" style="height: 40px;" />
                                    }
                                </td>
                                <td>@item.Item1</td>
                                <td>@item.Item2</td>
                                <td>@item.Item3</td>
                                <td>@item.Item4</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.AboutID" asp-area="Admin" class="btn btn-primary btn-sm me-1">
                                        <i class="fas fa-eye"></i> Detay
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.AboutID" asp-area="Admin" class="btn btn-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </a>
                                    <button type="button" class="btn btn-danger btn-sm"
                                            data-toggle="modal"
                                            data-target="#deleteModal"
                                            data-id="@item.AboutID"
                                            data-name="@item.Item1"
                                            data-controller="About">
                                        <i class="fas fa-trash"></i> Sil
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning m-3 text-center">Henüz bilgi eklenmemiş.</div>
            }
        </div>
    </div>
</div>

<!-- Silme Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteItemName"></strong> adlı içeriği silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <a id="confirmDeleteBtn" class="btn btn-danger">Sil</a>
            </div>
        </div>
    </div>
</div>
