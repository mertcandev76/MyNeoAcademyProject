@model List<ResultAboutDTO>
@{
    ViewData["Title"] = "Hakkımda Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-3">
    <div class="card shadow-sm">
        <!-- Başlık + Yeni Ekle butonu -->
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">@ViewData["Title"]</h3>
            <a asp-action="Create" asp-area="Admin" class="btn btn-primary btn-sm">+ Yeni “About” Ekle</a>
        </div>

        <div class="card-body p-0">
            @if (Model?.Any() == true)
            {
                <table class="table table-bordered mb-0 text-center align-middle">
                    <thead class="table">
                        <tr>
                            <th style="width: 4%;">#</th>
                            <th style="width: 16%;">Başlık</th>
                            <th style="width: 16%;">Alt&nbsp;Başlık</th>
                            <th style="width: 12%;">Buton&nbsp;Metni</th>
                            <th style="width: 14%;">Ön&nbsp;Görsel</th>
                            <th style="width: 14%;">Arka&nbsp;Görsel</th>
                            <th style="width: 24%;">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody class="table">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AboutID</td>
                                <td>@item.Title</td>
                                <td>@item.Subtitle</td>
                                <td>@item.ButtonText</td>

                                <!-- Ön görsel -->
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.ImageFrontUrl))
                                    {
                                        <img src="@item.ImageFrontUrl"
                                             alt="Ön Görsel"
                                             class="img-fluid rounded shadow-sm"
                                             style="max-height:60px;" />
                                    }
                                </td>

                                <!-- Arka görsel -->
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.ImageBackUrl))
                                    {
                                        <img src="@item.ImageBackUrl"
                                             alt="Arka Görsel"
                                             class="img-fluid rounded shadow-sm"
                                             style="max-height:60px;" />
                                    }
                                </td>

                                <!-- İşlemler -->
                                <td>
                                    <a asp-action="Details"
                               asp-area="Admin"
                               asp-route-id="@item.AboutID"
                                       class="btn btn-primary btn-sm me-1">
                                        <i class="fas fa-eye"></i> Detay
                                    </a>

                                    <a asp-action="Edit"
                               asp-area="Admin"
                               asp-route-id="@item.AboutID"
                                       class="btn btn-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </a>

                                    <button type="button"
                                            class="btn btn-danger btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-id="@item.AboutID"
                                            data-name="@item.Title"
                                            data-controller="About">
                                        <i class="fas fa-trash"></i> Sil
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning m-3 text-center">
                    Henüz bir “About” kaydı eklenmemiş.
                </div>
            }
        </div>
    </div>
</div>

<!-- Silme onay modalı (ortak partial) -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteItemName"></strong> adlı içeriği silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <a id="confirmDeleteBtn" class="btn btn-danger">Sil</a>
            </div>
        </div>
    </div>
</div>


