@model CreateAboutDTO
@{
    ViewData["Title"] = "Yeni Hakkımda Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>

        <div class="card-body">
            <form asp-action="Create" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" placeholder="Örneğin: Hakkımızda Başlığı" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Subtitle" class="form-label">Alt Başlık</label>
                    <input asp-for="Subtitle" class="form-control" placeholder="Alt başlık girin..." />
                    <span asp-validation-for="Subtitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Kısa bir açıklama girin..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ButtonText" class="form-label">Buton Metni</label>
                    <input asp-for="ButtonText" class="form-control" placeholder="Buton yazısı..." />
                    <span asp-validation-for="ButtonText" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ButtonLink" class="form-label">Buton Linki</label>
                    <input asp-for="ButtonLink" class="form-control" placeholder="https://example.com..." />
                    <span asp-validation-for="ButtonLink" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ön Görsel</label>
                    <input type="file" name="ImageFrontFile" class="form-control" accept="image/*" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Arka Görsel</label>
                    <input type="file" name="ImageBackFile" class="form-control" accept="image/*" />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

