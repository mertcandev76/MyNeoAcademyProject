@model CreateAboutDTO
@{
    ViewData["Title"] = "Yeni Hakkımızda İçeriği Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Hakkımızda açıklaması"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl1" class="form-label">Görsel 1 URL</label>
                    <input asp-for="ImageUrl1" class="form-control" placeholder="https://example.com/image1.jpg" />
                    <span asp-validation-for="ImageUrl1" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl2" class="form-label">Görsel 2 URL</label>
                    <input asp-for="ImageUrl2" class="form-control" placeholder="https://example.com/image2.jpg" />
                    <span asp-validation-for="ImageUrl2" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="Item1" class="form-label"></label>
                        <input asp-for="Item1" class="form-control" placeholder="Örneğin: Tecrübe, Güvenilirlik" />
                        <span asp-validation-for="Item1" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Item2" class="form-label"></label>
                        <input asp-for="Item2" class="form-control" placeholder="Örneğin: Kalite, Destek" />
                        <span asp-validation-for="Item2" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Item3" class="form-label"></label>
                        <input asp-for="Item3" class="form-control" placeholder="Örneğin: Müşteri Memnuniyeti" />
                        <span asp-validation-for="Item3" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="Item4" class="form-label"></label>
                        <input asp-for="Item4" class="form-control" placeholder="Opsiyonel bir madde" />
                        <span asp-validation-for="Item4" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>


