@model CreateAboutWithFileDTO
@{
    ViewData["Title"] = "Hakkımızda Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>

        <div class="card-body">
            <form asp-action="Create" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Subtitle" class="form-label">Alt Başlık</label>
                    <input asp-for="Subtitle" class="form-control" placeholder="Alt başlık girin..." />
                    <span asp-validation-for="Subtitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" placeholder="Başlık girin..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Açıklama girin..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ButtonText" class="form-label">Buton Metni</label>
                    <input asp-for="ButtonText" class="form-control" placeholder="Buton metni girin..." />
                    <span asp-validation-for="ButtonText" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ButtonLink" class="form-label">Buton Linki</label>
                    <input asp-for="ButtonLink" class="form-control" placeholder="Buton linki girin..." />
                    <span asp-validation-for="ButtonLink" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ön Görsel</label>
                    <input asp-for="ImageFrontFile" type="file" class="form-control" accept=".jpg,.jpeg,.png" />
                    <span asp-validation-for="ImageFrontFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageBackFile" class="form-label">Yeni Arka Görsel (isteğe bağlı)</label>
                    <input asp-for="ImageBackFile" type="file" class="form-control" accept=".jpg,.jpeg,.png" />
                    <span asp-validation-for="ImageBackFile" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

