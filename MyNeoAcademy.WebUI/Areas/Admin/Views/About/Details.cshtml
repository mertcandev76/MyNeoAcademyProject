@model ResultAboutDTO
@{
    ViewData["Title"] = "Hakkımızda İçeriği Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-primary">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Görsel 1</dt>
                <dd class="col-sm-9"><a href="@Model.ImageUrl1" target="_blank">@Model.ImageUrl1</a></dd>

                <dt class="col-sm-3">Görsel 2</dt>
                <dd class="col-sm-9"><a href="@Model.ImageUrl2" target="_blank">@Model.ImageUrl2</a></dd>

                <dt class="col-sm-3">Item 1</dt>
                <dd class="col-sm-9">@Model.Item1</dd>

                <dt class="col-sm-3">Item 2</dt>
                <dd class="col-sm-9">@Model.Item2</dd>

                <dt class="col-sm-3">Item 3</dt>
                <dd class="col-sm-9">@Model.Item3</dd>

                <dt class="col-sm-3">Item 4</dt>
                <dd class="col-sm-9">@Model.Item4</dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model.AboutID" class="btn btn-warning">Güncelle</a>
            </div>
        </div>
    </div>
</div>

