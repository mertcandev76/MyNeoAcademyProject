@model MyNeoAcademy.DTO.DTOs.AboutDTOs.ResultAboutDTO
@{
    ViewData["Title"] = "Hakkımda Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-primary">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Başlık</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Alt Başlık</dt>
                <dd class="col-sm-9">@Model.Subtitle</dd>

                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Buton Metni</dt>
                <dd class="col-sm-9">@Model.ButtonText</dd>

                <dt class="col-sm-3">Buton Linki</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ButtonLink))
                    {
                        <a href="@Model.ButtonLink" target="_blank">@Model.ButtonLink</a>
                    }
                    else
                    {
                        <span>Bağlantı yok</span>
                    }
                </dd>

                <dt class="col-sm-3">Ön Görsel</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageFrontUrl))
                    {
                        <a href="@Model.ImageFrontUrl" target="_blank">Görseli Görüntüle</a>

                        <br />
                        <img src="@Model.ImageFrontUrl" alt="Ön Görsel" class="img-fluid mt-2 rounded shadow-sm" style="max-height: 150px;" />
                    }
                    else
                    {
                        <span>Ön görsel bulunamadı.</span>
                    }
                </dd>

                <dt class="col-sm-3">Arka Görsel</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageBackUrl))
                    {
                        <a href="@Model.ImageBackUrl" target="_blank">Görseli Görüntüle</a>

                        <br />
                        <img src="@Model.ImageBackUrl" alt="Arka Görsel" class="img-fluid mt-2 rounded shadow-sm" style="max-height: 150px;" />
                    }
                    else
                    {
                        <span>Arka görsel bulunamadı.</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model.AboutID" class="btn btn-warning">Güncelle</a>
            </div>
        </div>
    </div>
</div>
