@model ResultAboutDTO
@{
    ViewData["Title"] = "Hakkımızda Detayı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-primary">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.AboutID</dd>

                <dt class="col-sm-3">Başlık</dt>
                <dd class="col-sm-9">@Model.Title ?? "<span class='text-muted'>Yok</span>"</dd>

                <dt class="col-sm-3">Alt Başlık</dt>
                <dd class="col-sm-9">@Model.Subtitle ?? "<span class='text-muted'>Yok</span>"</dd>

                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Html.Raw(Model.Description?.Replace("\n", "<br />") ?? "<span class='text-muted'>Yok</span>")</dd>

                <dt class="col-sm-3">Buton Metni</dt>
                <dd class="col-sm-9">@Model.ButtonText ?? "<span class='text-muted'>Yok</span>"</dd>

                <dt class="col-sm-3">Buton Linki</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrWhiteSpace(Model.ButtonLink))
                    {
                        <a href="@Model.ButtonLink" target="_blank">@Model.ButtonLink</a>
                    }
                    else
                    {
                        <span class="text-muted">Yok</span>
                    }
                </dd>

                <dt class="col-sm-3">Ön Görsel</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrWhiteSpace(Model.ImageFrontUrl))
                    {

                        <a href="@Model.ImageFrontUrl" target="_blank">Ön Görseli Görüntüle</a>
                    }
                    else
                    {
                        <span class="text-muted">Görsel bulunamadı.</span>
                    }
                </dd>

                <dt class="col-sm-3">Arka Görsel</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrWhiteSpace(Model.ImageBackUrl))
                    {

                        <a href="@Model.ImageBackUrl" target="_blank">Arka Görseli Görüntüle</a>
                    }
                    else
                    {
                        <span class="text-muted">Görsel bulunamadı.</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model.AboutID" class="btn btn-warning">Güncelle</a>
            </div>
        </div>
    </div>
</div>

