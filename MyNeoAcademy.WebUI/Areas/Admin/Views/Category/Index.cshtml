@model List<ResultCategoryDTO>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-3">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">@ViewData["Title"]</h3>
            <a asp-action="Create" asp-area="Admin" class="btn btn-primary btn-sm">+ Yeni Kategori Ekle</a>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-bordered mb-0 text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 25%;">Kategori Adı</th>
                            <th style="width: 35%;">Açıklama</th>
                            <th style="width: 15%;">İkon</th>
                            <th style="width: 25%;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td><i class="@item.IconClass"></i> <small class="text-muted">@item.IconClass</small></td>
                                <td>
                                    <a asp-action="Detail" asp-area="Admin" asp-route-id="@item.CategoryID" class="btn btn-primary btn-sm me-1">
                                        <i class="fas fa-eye"></i> Detay
                                    </a>
                                    <a asp-action="Edit" asp-area="Admin" asp-route-id="@item.CategoryID" class="btn btn-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </a>
                                    <button type="button" class="btn btn-danger btn-sm"
                                            data-toggle="modal"
                                            data-target="#deleteModal"
                                            data-id="@item.CategoryID"
                                            data-name="@item.Name"
                                            data-controller="Category">
                                        <i class="fas fa-trash"></i> Sil
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning m-3 text-center">
                    Henüz bir kategori eklenmemiş.
                </div>
            }
        </div>
    </div>
</div>

<!-- Silme onay modalı -->
@await Html.PartialAsync("~/Areas/Admin/Views/Shared/_DeleteModalPartial.cshtml")
