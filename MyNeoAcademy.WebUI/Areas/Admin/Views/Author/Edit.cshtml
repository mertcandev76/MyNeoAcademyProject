@model UpdateAuthorWithFileDTO

@{
    ViewData["Title"] = "Yazar Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-area="Admin" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="AuthorID" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Ad Soyad</label>
                    <input asp-for="Name" class="form-control" placeholder="Ad soyad girin..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Bio" class="form-label">Biyografi</label>
                    <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Kısa biyografi girin..."></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mevcut Profil Resmi</label><br />
                    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" style="max-height:80px;" class="img-thumbnail" />
                    }
                    else
                    {
                        <small class="text-muted">Resim bulunamadı.</small>
                    }
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Yeni Profil Resmi (isteğe bağlı)</label>
                    <input asp-for="ImageFile" type="file" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FacebookUrl" class="form-label">Facebook URL</label>
                    <input asp-for="FacebookUrl" class="form-control" placeholder="https://facebook.com/username" />
                    <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TwitterUrl" class="form-label">Twitter URL</label>
                    <input asp-for="TwitterUrl" class="form-control" placeholder="https://twitter.com/username" />
                    <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="WebsiteUrl" class="form-label">Web Sitesi URL</label>
                    <input asp-for="WebsiteUrl" class="form-control" placeholder="https://..." />
                    <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
