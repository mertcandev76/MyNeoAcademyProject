@model ResultSubscriberDTO
@{
    ViewData["Title"] = "Abone Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-primary">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">E-posta</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Aktif Mi?</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model.SubscriberID" class="btn btn-warning">Güncelle</a>
            </div>
        </div>
    </div>
</div>

