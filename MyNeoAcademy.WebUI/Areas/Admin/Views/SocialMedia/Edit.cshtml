@model UpdateSocialMediaDTO
@{
    ViewData["Title"] = "Sosyal Medya Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-area="Admin" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="SocialMediaID" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" placeholder="Örneğin: LinkedIn" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Icon" class="form-label">İkon (CSS Sınıfı)</label>
                    <input asp-for="Icon" class="form-control" list="iconList" placeholder="fab fa-instagram" />
                    <datalist id="iconList">
                        <option value="fab fa-facebook"></option>
                        <option value="fab fa-twitter"></option>
                        <option value="fab fa-linkedin"></option>
                        <option value="fab fa-instagram"></option>
                        <option value="fab fa-youtube"></option>
                    </datalist>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IconUrl" class="form-label">Bağlantı URL</label>
                    <input asp-for="IconUrl" class="form-control" placeholder="https://linkedin.com/in/kullanici" />
                    <span asp-validation-for="IconUrl" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
