@model ResultAboutDetailDTO

@{
    ViewData["Title"] = "Hakkımızda Detay";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-primary">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.AboutDetailID</dd>

                <dt class="col-sm-3">Başlık</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Paragraf 1</dt>
                <dd class="col-sm-9">@Model.Paragraph1</dd>

                <dt class="col-sm-3">Paragraf 2</dt>
                <dd class="col-sm-9">@Model.Paragraph2</dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model.AboutDetailID" class="btn btn-warning">Güncelle</a>
            </div>
        </div>
    </div>
</div>
