@model UpdateBlogDTO
@{
    ViewData["Title"] = "Blog Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-area="Admin" method="post">
      @*      <form asp-action="Edit" method="post" class="needs-validation" novalidate>*@
                <input asp-for="BlogID" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Blog başlığı" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label"></label>
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="İçerik"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Resim URL'si" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BlogDate" class="form-label"></label>
                    <input asp-for="BlogDate" class="form-control" type="date" />
                    <span asp-validation-for="BlogDate" class="text-danger"></span>
                </div>

     @*           <div class="mb-3">
                    <label asp-for="BlogCategoryID" class="form-label"></label>
                    <select asp-for="BlogCategoryID" asp-items="(IEnumerable<SelectListItem>)ViewBag.BlogCategories" class="form-select">
                        <option value="">-- Kategori Seçin --</option>
                    </select>
                    <span asp-validation-for="BlogCategoryID" class="text-danger"></span>
                </div>*@


                <div class="form-group mb-4">
                    <label for="BlogCategoryID" class="font-weight-bold">
                        Blog Kategorisi
                    </label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-light text-secondary">
                                <i class="fas fa-tags"></i>
                            </span>
                        </div>
                        <select id="BlogCategoryID"
                                name="BlogCategoryID"
                                class="form-control"
                                asp-for="BlogCategoryID"
                                asp-items="(IEnumerable<SelectListItem>)ViewBag.BlogCategories">
                            <option value="" disabled selected hidden>-- Kategori Seçin --</option>
                        </select>
                    </div>
                    <span asp-validation-for="BlogCategoryID" class="text-danger small"></span>
                </div>


                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>