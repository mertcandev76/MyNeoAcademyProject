@model List<ResultBlogDTO>
@{
    ViewData["Title"] = "Blog Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid px-3">
    <div class="card shadow-sm mt-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>@ViewData["Title"]</h3>
            <a asp-action="Create" class="btn btn-primary btn-sm">Yeni Blog Ekle</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered mb-0 text-center align-middle">
                <thead class="table">
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.BlogCategory?.Name</td>
                                <td>@item.BlogDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.BlogID" class="btn btn-sm btn-info me-1">Detay</a>
                                    <a asp-action="Edit" asp-route-id="@item.BlogID" class="btn btn-sm btn-warning me-1">Düzenle</a>
                                    <button type="button" class="btn btn-danger btn-sm"
                                            data-toggle="modal"
                                            data-target="#deleteModal"
                                            data-id="@item.BlogID"
                                            data-name="@item.Title"
                                            data-controller="Blog">
                                        <i class="fas fa-trash"></i> Sil
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">Kayıt bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Silme onay modalı -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteItemName"></strong> adlı içeriği silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <a id="confirmDeleteBtn" class="btn btn-danger">Sil</a>
            </div>
        </div>
    </div>
</div>

