@model List<ResultCourseCategoryDTO>
@{
    ViewData["Title"] = "Kurs Kategorileri Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-3">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">@ViewData["Title"]</h3>
            <a asp-action="Create" asp-area="Admin" class="btn btn-primary btn-sm">+ Yeni Kategori Ekle</a>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-bordered mb-0 text-center align-middle">
                    <thead class="table">
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>İkon</th>
                            <th>Açıklama</th>
                            <th>Görünürlük</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="table">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CourseCategoryID</td>
                                <td>@item.Name</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Icon))
                                    {
                                        <i class="@item.Icon fa-lg text-primary"></i>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@item.Description</td>
                                <td>
                                    @if (item.IsShown)
                                    {
                                        <span class="badge bg-success">Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Hayır</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.CourseCategoryID" asp-area="Admin" class="btn btn-primary btn-sm me-1"><i class="fas fa-eye"></i> Detay</a>
                                    <a asp-action="Edit" asp-route-id="@item.CourseCategoryID" asp-area="Admin" class="btn btn-warning btn-sm me-1"><i class="fas fa-edit"></i> Düzenle</a>
                                    <button type="button" class="btn btn-danger btn-sm"
                                            data-toggle="modal"
                                            data-target="#deleteModal"
                                            data-id="@item.CourseCategoryID"
                                            data-name="@item.Name"
                                            data-controller="CourseCategory">
                                        <i class="fas fa-trash"></i> Sil
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning m-3 text-center">Henüz kurs kategorisi eklenmemiş.</div>
            }
        </div>
    </div>
</div>

<!-- Silme onay modalı -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong id="deleteItemName"></strong> adlı içeriği silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <a id="confirmDeleteBtn" class="btn btn-danger">Sil</a>
            </div>
        </div>
    </div>
</div>


