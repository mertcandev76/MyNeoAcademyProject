@model CreateTestimonialDTO
@{
    ViewData["Title"] = "Yeni Referans Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" asp-area="Admin" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Ad Soyad</label>
                    <input asp-for="Name" class="form-control" placeholder="Örneğin: Mertcan Adsız" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Ünvan</label>
                    <input asp-for="Title" class="form-control" placeholder="Örneğin: Yazılım Uzmanı" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label">Yorum</label>
                    <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Yorumunuzu yazınız..."></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Star" class="form-label">Puan (1 - 5)</label>
                    <input asp-for="Star" class="form-control" type="number" min="1" max="5" />
                    <span asp-validation-for="Star" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

