@model ResultTestimonialDTO
@{
    ViewData["Title"] = "Referans Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-primary">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3">İsim</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Unvan</dt>
                <dd class="col-sm-9">@Model.Title ?? "-" </dd>

                <dt class="col-sm-3">Görsel</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <a href="@Model.ImageUrl" target="_blank">Görseli Görüntüle</a>

                        <br />
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid mt-2 rounded" style="max-height: 150px;" />
                    }
                    else
                    {
                        <span>Görsel bulunamadı.</span>
                    }
                </dd>

                <dt class="col-sm-3">Yorum</dt>
                <dd class="col-sm-9">@Model.Comment ?? "-" </dd>

                <dt class="col-sm-3">Puan</dt>
                <dd class="col-sm-9">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Model.Star)
                        {
                            <i class="fas fa-star text-warning"></i>
                        }
                        else
                        {
                            <i class="far fa-star text-muted"></i>
                        }
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model.TestimonialID" class="btn btn-warning">Güncelle</a>
            </div>
        </div>
    </div>
</div>

