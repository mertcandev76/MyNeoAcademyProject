@model UpdateTestimonialDTO
@{
    ViewData["Title"] = "Referans Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-area="Admin" method="post">
                <input type="hidden" asp-for="TestimonialID" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">İsim</label>
                    <input asp-for="Name" class="form-control" placeholder="Referans veren kişi adı" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Unvan</label>
                    <input asp-for="Title" class="form-control" placeholder="Örneğin: CEO, Müşteri" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label">Yorum</label>
                    <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Referans yorumu"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Star" class="form-label">Puan (1-5)</label>
                    <input asp-for="Star" type="number" min="1" max="5" class="form-control" />
                    <span asp-validation-for="Star" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

