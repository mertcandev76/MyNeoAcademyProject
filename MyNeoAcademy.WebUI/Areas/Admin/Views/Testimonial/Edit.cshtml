@model UpdateTestimonialWithFileDTO
@{
    ViewData["Title"] = "Referans Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-area="Admin" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="TestimonialID" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">Ad Soyad</label>
                    <input asp-for="FullName" class="form-control" placeholder="Ad soyad girin..." />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Ünvan</label>
                    <input asp-for="Title" class="form-control" placeholder="Ünvan girin..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label">İçerik</label>
                    <textarea asp-for="Content" class="form-control" rows="4" placeholder="Referans içeriği girin..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rating" class="form-label">Puan</label>
                    <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mevcut Profil Resmi</label><br />
                    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" style="max-height:80px;" class="img-thumbnail" />
                    }
                    else
                    {
                        <small class="text-muted">Resim bulunamadı.</small>
                    }
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Yeni Profil Resmi (isteğe bağlı)</label>
                    <input asp-for="ImageFile" type="file" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
